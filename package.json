{
  "name": "shopee-sdk",
  "version": "0.1.0",
  "description": "Shopee SDK maintaining by community",
  "type": "module",
  "main": "./lib/sdk.js",
  "exports": {
    ".": {
      "import": "./lib/sdk.js",
      "types": "./lib/sdk.d.ts"
    }
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "node --loader ts-node/esm node_modules/.bin/tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/congminh1254/shopee-sdk.git"
  },
  "keywords": [
    "shopee",
    "sdks",
    "nodejs"
  ],
  "author": "Minh Nguyen Cong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/congminh1254/shopee-sdk/issues"
  },
  "homepage": "https://github.com/congminh1254/shopee-sdk#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
